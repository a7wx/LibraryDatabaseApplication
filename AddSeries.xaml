<Window x:Class="LibraryApplication.AddSeries"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LibraryApplication"
        mc:Ignorable="d"
        Title="AddSeries" Height="125" Width="200">
    <Grid>
        <Label Content="Add Series:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="tbSeriesName" Margin="15,40,20,0" Text="Genre" TextWrapping="Wrap" Height="18" VerticalAlignment="Top"/>
        <Button x:Name="btAdd" HorizontalAlignment="Right" Margin="70, 70, 70, 10" VerticalAlignment="Top" Content="Add" Click="btAdd_Click"/>
        <Button x:Name="btCancel" HorizontalAlignment="Right" Margin="15, 70, 20, 10" VerticalAlignment="Top" Content="Cancel" Click="btCancel_Click"/>
    </Grid>
</Window>
